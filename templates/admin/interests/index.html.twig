{% extends 'adminbase.html.twig' %}

{% block title %}Interests index{% endblock %}

{% block body %}
    <h1>Interests index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Details</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for interest in interests %}
            <tr>
                <td>{{ interest.id }}</td>
                <td>{{ interest.title }}</td>
                <td>{{ interest.details }}</td>
                <td>
                    <a href="{{ path('interests_show', {'id': interest.id}) }}">show</a>
                    <a href="{{ path('interests_edit', {'id': interest.id}) }}">edit</a>
                    {{ include ('admin/interests/_delete_form.html.twig')}}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('interests_new') }}">Create new</a>
{% endblock %}
